{
	"node": true,
	"esnext": true,			// Tell JSHint that the code uses ECMAScript 6 specific syntax.
	"bitwise": true,		// Prohibit the use of bitwise operators such as ^, &, | etc
	"camelcase": true,		// Force all variable names to use either camelCase style or UPPER_CASE with underscores
	"curly": true,			// Always put curly braces around blocks in loops and conditionals 
	"eqeqeq": true,			// Prohibit the use of == and != in favor of === and !==
	"immed": true,			// Prohibit the use of immediate function invocations without wrapping them in parentheses
	"indent": 4,			// Tab width
	"latedef": true,		// Prohibit the use of a variable before it was defined
	"newcap": true,			// Require capitalization of names of constructor functions
	"noarg": true,			// Prohibit the use of arguments.caller and arguments.callee
	"quotmark": "double",	// Only double quotes, should this be single?
	"undef": true,			// Prohibit the use of explicitly undeclared variables
	"unused": true,			// Warn on unused variables
	"strict": true,			// Enable strict mode. http://jshint.com/docs/options/#strict
	"trailing": true,		// Disable trailing whitespace
	"smarttabs": true,		// Suppress warnings about mixed tabs and spaces
	"scripturl": true,		// Suppress warnings about the use of script-targeted URLs. eg: javascript:void(0)
	"jquery": true,			// Globally expose jquery
	"browser": true,		// Globally expose brower objects. eg: document, window
	"predef": [	"angular", 
				"inject",
				"define", 
				"moment", 
				"afterEach", 
				"beforeEach", 
				"describe", 
				"expect",
				"runs",
				"waitsFor",
				"it",
				"spyOn",
				"spyOnEvent",
				"context",
				"Showdown",
				"prettyPrint"]
}